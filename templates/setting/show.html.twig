{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold d-inline-block text-primary">Show setting</h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                                <tr>
                                    <th>Start interval score</th>
                                    <td>{{ setting.startIntervalScore }}</td>
                                </tr>
                                <tr>
                                    <th>End interval score</th>
                                    <td>{{ setting.endIntervalScore }}</td>
                                </tr>
                                <tr>
                                    <th>Amount score</th>
                                    <td>{{ setting.amountScore }}</td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-inline-block">
            <a class="btn btn-warning" href="{{ path('app_setting_edit', {'id': setting.id}) }}">Edit</a>
        </div>
    </div>
{% endblock %}
