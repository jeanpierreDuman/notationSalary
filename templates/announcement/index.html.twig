{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold d-inline-block text-primary">List of announcements</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Company</th>
                            <th>Job</th>
                            <th>Place</th>
                            <th style="width: 120px;">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                            {% for announcement in announcements %}
                                <tr>
                                    <td>{{ announcement.id }}</td>
                                    <td>{{ announcement.company }}</td>
                                    <td>{{ announcement.job }}</td>
                                    <td>{{ announcement.place }}</td>
                                    <td>
                                        <a class="btn btn-info" href="{{ path('app_announcement_show', {'id': announcement.id}) }}">
                                            <i class="fa fa-eye"></i>
                                        </a>
                                        <a class="btn btn-warning" href="{{ path('app_announcement_edit', {'id': announcement.id}) }}">
                                            <i class="fa fa-pencil-alt"></i>
                                        </a>
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td colspan="5">no records found</td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <a class="btn btn-primary" href="{{ path('app_announcement_new') }}">new</a>
    </div>
{% endblock %}
