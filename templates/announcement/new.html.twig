{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        {{ form_start(form) }}

        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold d-inline-block text-primary">New announcement</h6>
                <h6 class="float-right d-inline-block">
                    <a href="{{ path('app_announcement_index') }}">back to list</a>
                </h6>
            </div>
            <div class="card-body">
                <table>
                    <tr>
                        <td>{{ form_label(form.company)}}</td>
                        <td class="pl-3">{{ form_widget(form.company) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.job)}}</td>
                        <td class="pl-3">{{ form_widget(form.job) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.place)}}</td>
                        <td class="pl-3">{{ form_widget(form.place) }}</td>
                    </tr>
                    <tr>
                        <td>{{ form_label(form.description)}}</td>
                        <td class="pl-3">{{ form_widget(form.description) }}</td>
                    </tr>
                </table>
            </div>
        </div>
        <button class="btn btn-primary">{{ button_label|default('Save') }}</button>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
{% endblock %}
