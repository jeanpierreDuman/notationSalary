{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold d-inline-block text-primary">List of timetable</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Name</th>
                            <th>Salary</th>
                            <th>Number</th>
                            <th style="width: 120px;">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for time_table in time_tables %}
                            <tr>
                                <td>{{ time_table.id }}</td>
                                <td>{{ time_table.name }}</td>
                                <td>
                                    <a href="{{ path('app_salary_show', {'id': time_table.salary.id}) }}">
                                        {{ time_table.salary }}
                                    </a>                                        
                                </td>
                                <td>{{ time_table.timeTableLine|length }}</td>
                                <td>
                                    <a class="btn btn-info" href="{{ path('app_time_table_show', {'id': time_table.id}) }}">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a class="btn btn-warning" href="{{ path('app_time_table_edit', {'id': time_table.id}) }}">
                                        <i class="fa fa-pencil-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <a class="btn btn-primary" href="{{ path('app_time_table_new') }}">new</a>
    </div>
{% endblock %}
