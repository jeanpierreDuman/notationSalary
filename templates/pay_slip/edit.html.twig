{% extends 'base.html.twig' %}

{% block body %}

    {% form_theme form.paySlipLine 'form/pay_slip_paySlipLine_entry_widget.html.twig' %}

    {{ form_start(form) }}

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-6">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold d-inline-block text-primary">Edit payslip</h6>
                        <h6 class="float-right d-inline-block">
                            <a href="{{ path('app_pay_slip_index') }}">back to list</a>
                        </h6>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <p>
                                {{ form_label(form.salary) }} : {{ form_widget(form.salary) }}
                            </p>
                            <p>
                                {{ form_label(form.startPeriod) }} : {{ form_widget(form.startPeriod) }}
                            </p>
                            <p>
                                {{ form_label(form.endPeriod) }} : {{ form_widget(form.endPeriod) }}
                            </p>
                            <p>
                                {{ form_label(form.payAt) }} : {{ form_widget(form.payAt) }}
                            </p>
                            <p>
                                {{ form_label(form.type) }} : {{ form_widget(form.type) }}
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card shadow mb-4">
                    <div class="card-header py-3">
                        <h6 class="m-0 font-weight-bold d-inline-block text-primary">Payslip line</h6>
                    </div>
                    <div class="card-body">
                        <div class="">
                            <div class="font-weight-bold text-center" style="font-size: 30px">
                                <span class="add-item btn btn-primary">
                                    <i class="fa fa-plus-circle"></i>
                                </span>
                                <span class="remove-item btn btn-danger">
                                    <i class="fa fa-minus-circle"></i>
                                </span>
                            </div>

                            <table class="table table-bordered mt-3">
                                <tr>
                                    <td class="col-md-1">Code</td>
                                    <td class="col-md-4">Description</td>
                                    <td class="col-md-2">Base</td>
                                    <td class="col-md-1">Rate salary</td>
                                    <td class="col-md-1">Amount Salary</td>
                                    <td class="col-md-1">Rate Employe</td>
                                    <td class="col-md-1">Amount Emp.</td>
                                    <td class="col-md-1">Action</td>
                                </tr>
                                <tbody id="list-item-collection" class=""
                                    data-prototype="{{ form_widget(form.paySlipLine.vars.prototype)|e }}"
                                    data-widget-tags="{{ '<div></div>'|e }}"
                                    data-widget-counter="{{ form.paySlipLine|length }}">
                                    {% for psl in form.paySlipLine %}
                                        <tr class="mb-2">
                                            <td class="col-md-1">{{ form_widget(psl.code) }}</td>
                                            <td class="col-md-4">{{ form_widget(psl.description) }}</td>
                                            <td class="col-md-2">{{ form_widget(psl.base) }}</td>
                                            <td class="col-md-1">{{ form_widget(psl.rateSalary) }}</td>
                                            <td class="col-md-1">{{ form_widget(psl.amountSalary) }}</td>
                                            <td class="col-md-1">{{ form_widget(psl.rateEmploye) }}</td>
                                            <td class="col-md-1">{{ form_widget(psl.amountEmploye) }}</td>
                                            <td class="col-md-1">
                                                 <button class="btn btn-danger remove-cibling-item">
                                                    <i class="fa fa-trash"></i>
                                                 </button>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>

                            {% if form.paySlipLine|length == 0 %}
                                {{ form_widget(form.paySlipLine) }}
                            {% endif %}

                            <input type="submit" class="btn btn-primary" value="Save">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ form_end(form) }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script type="text/javascript" src="{{ asset('js/formCollection.js') }}"></script>
{% endblock %}


{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/index.css') }}">
{% endblock %}