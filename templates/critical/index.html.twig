{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold d-inline-block text-primary">List of criticals</h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                        <tr>
                            <th>Id</th>
                            <th>Description</th>
                            <th>Notation</th>
                            <th>Date</th>
                            <th style="width: 120px;">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for critical in criticals %}
                            <tr>
                                <td>{{ critical.id }}</td>
                                <td>{{ critical.description }}</td>
                                <td>{{ critical.notation }}</td>
                                <td>{{ critical.date|date('d/m/Y H:i') }}</td>
                                <td>
                                    <a class="btn btn-info" href="{{ path('app_critical_show', {'id': critical.id}) }}">
                                        <i class="fa fa-eye"></i>
                                    </a>
                                    <a class="btn btn-warning" href="{{ path('app_critical_edit', {'id': critical.id}) }}">
                                        <i class="fa fa-pencil-alt"></i>
                                    </a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="5">no records found</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <a class="btn btn-primary" href="{{ path('app_critical_new') }}">new</a>
    </div>
{% endblock %}
