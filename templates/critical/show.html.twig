{% extends 'base.html.twig' %}

{% block body %}
    <div class="container-fluid">
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold d-inline-block text-primary">Show salary</h6>
                <h6 class="float-right d-inline-block">
                    <a href="{{ path('app_critical_index') }}">back to list</a>
                </h6>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <tr>
                            <th>Firstname</th>
                            <td>{{ critical.description }}</td>
                        </tr>
                        <tr>
                            <th>Lastname</th>
                            <td>{{ critical.notation }}</td>
                        </tr>
                        <tr>
                            <th>Date</th>
                            <td>{{ critical.date|date('d/m/Y H:i') }}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>

        {{ include('critical/_delete_form.html.twig') }}
    </div>
{% endblock %}
